# ===========================================
# BankWise Backend - Environment Configuration
# ===========================================
# Copy this file to .env and update values for your environment

# ---- Database Configuration ----
# PostgreSQL connection settings
DB_URL=jdbc:postgresql://localhost:5432/bankwise
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here

# ---- JWT Security ----
# IMPORTANT: Change this in production! Must be at least 64 characters for HS512
# Generate a secure key using: openssl rand -base64 64
JWT_SECRET=bankwise_super_secret_key_change_me_please_64_chars_min_1234567890

# ---- Email Configuration (Gmail SMTP) ----
# For Gmail, use App Password (not your regular password)
# Steps: Enable 2FA â†’ Create app password at https://myaccount.google.com/apppasswords
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_gmail_app_password

# ---- Server Configuration ----
# Port the backend server will run on
SERVER_PORT=8091

# ---- CORS Configuration ----
# Comma-separated list of allowed origins
# Update for production with your frontend URL
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8091

# ---- WebSocket Configuration ----
# Comma-separated list of allowed WebSocket origins
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8091
